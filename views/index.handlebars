<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">Eat da Burgers!</h1>
    <p class="lead text-center">Add your favorite burger here:</p>
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="bg" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-6">
    <h3>Burgers Ready to Eat!</h3>
    <ul>
      <section class="row mb-1 pb-1">
       
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/unless}}
          {{/each}}
        </section>
        
      </section>
    </ul>
  </div>

  <div class="col-6"></div>
    <h3>Burgers Already Gone!</h3>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>